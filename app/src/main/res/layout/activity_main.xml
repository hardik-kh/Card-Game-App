<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#040303"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:indeterminateTint="#E41111"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:progressTint="#FA1605"
        android:scaleY="6"
        android:scrollbarSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="124dp"
        android:layout_height="43dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="Score - "
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="58dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="/ 80"
        android:textColor="#FFEB3B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/maintxt"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="390dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:id="@+id/h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="8dp"
                android:onClick="tap"
                android:tag="5"
                android:visibility="visible"
                app:srcCompat="@drawable/img1" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="6"
                app:srcCompat="@drawable/img2" />

            <ImageView
                android:id="@+id/i3"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="7"
                app:srcCompat="@drawable/img3" />

            <ImageView
                android:id="@+id/i4"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="8"
                app:srcCompat="@drawable/img4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/i5"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="8dp"
                android:onClick="tap"
                android:tag="5"
                android:visibility="visible"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i6"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="6"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i7"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="7"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i8"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="8"
                app:srcCompat="@drawable/correct" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/i9"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="8dp"
                android:onClick="tap"
                android:tag="5"
                android:visibility="visible"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i10"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="6"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i11"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="7"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i12"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="8"
                app:srcCompat="@drawable/correct" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/h4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/i13"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="8dp"
                android:onClick="tap"
                android:tag="5"
                android:visibility="visible"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i14"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="6"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i15"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="7"
                app:srcCompat="@drawable/correct" />

            <ImageView
                android:id="@+id/i16"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginLeft="12dp"
                android:onClick="tap"
                android:tag="8"
                app:srcCompat="@drawable/correct" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/maintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="0"
        android:textColor="#FFEB3B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="3"
        android:textColor="#F3F6F8"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>